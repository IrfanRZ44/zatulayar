<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zlayar.zlayar.detailJasa.layananDetail"
    android:background="@color/putihGelap1"
    >
    <RelativeLayout
        android:id="@+id/customToolbar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/blue2">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_backward_white"
            android:id="@+id/layananBack"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Detail"
            android:textColor="@color/putih"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/layananBack"
            android:id="@+id/layananTitle"
            android:gravity="center_vertical"
            android:layout_marginLeft="25dp"
            android:fontFamily="@font/poppins_regular"
            />
        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_star_white_unfav"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:id="@+id/layananFav"
            />
    </RelativeLayout>
    <ProgressBar
        android:id="@+id/progressDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp" />
    <TextView
        android:id="@+id/textTryAgain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center_horizontal"
        android:text="Please, Try Again..."
        android:textColor="@color/hitam"
        android:textSize="14sp"
        android:layout_below="@+id/customToolbar"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/customToolbar"
        android:id="@+id/custoomPic"
        android:background="@color/putih"

        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:src="@drawable/bg_vectorsplash"
            android:id="@+id/layananImage"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userLayanan"
            android:layout_width="120dp"
            android:layout_height="110dp"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="5dp"
            android:layout_centerHorizontal="true"
            app:civ_circle_background_color="@color/gray"
            android:src="@drawable/person"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Title"
            android:layout_below="@+id/userLayanan"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_regular"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Title"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="14sp"
            android:textColor="@color/grayGelap"
            android:fontFamily="@font/poppins_regular"
            android:id="@+id/Layanan"
            />

    </RelativeLayout>

</RelativeLayout>