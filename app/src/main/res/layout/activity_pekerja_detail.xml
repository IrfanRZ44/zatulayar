<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zlayar.zlayar.detailJasa.pekerjaDetail"
    android:background="@color/putihGelap1"
    >

    <RelativeLayout
        android:id="@+id/customToolbar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/blue2">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_backward_white"
            android:id="@+id/ktBack"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Detail"
            android:textColor="@color/putih"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/ktBack"
            android:gravity="center_vertical"
            android:layout_marginLeft="25dp"
            android:fontFamily="@font/poppins_regular"
            />
        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_star_white_unfav"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:id="@+id/personFav"
            />
    </RelativeLayout>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:layout_below="@+id/customToolbar"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/putihGelap1"
            android:layout_below="@+id/customToolbar"
            >

            <TextView
                android:id="@+id/textTryAgain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center_horizontal"
                android:text="Please, Try Again..."
                android:textColor="@color/hitam"
                android:textSize="14sp" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/hasilDetail"
                android:visibility="visible"
                >
                <RelativeLayout
                    android:id="@+id/personDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/putih">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/personPic"
                        android:layout_width="120dp"
                        android:layout_height="110dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        />

                    <TextView
                        android:id="@+id/personName"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@+id/personPic"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Irfan"
                        android:textColor="#000"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/skillPerson"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/personName"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@+id/personPic"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Android Developer"
                        android:textColor="@color/grayGelap"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/contactPerson"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/skillPerson"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@+id/personPic"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Contact"
                        android:textColor="@color/grayMain"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/personChat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/personPic"
                        android:layout_margin="7dp"
                        android:background="@drawable/border_btn_login"
                        android:elevation="8dp"
                        android:fontFamily="@font/poppins_bold"
                        android:text="HUBUNGI"
                        android:textColor="@color/putih"
                        android:textStyle="bold" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/personDetail"
                    android:layout_marginTop="0.3dp"
                    android:paddingBottom="10dp"
                    android:paddingRight="15dp"
                    android:paddingLeft="15dp"
                    android:id="@+id/bidangDetail"
                    android:background="@color/putih"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bidang Pekerjaan"
                        android:textColor="@color/hitam"
                        android:textSize="@dimen/text_font"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins_regular"
                        android:id="@+id/textBidang"
                        android:layout_marginTop="10dp"

                        />
                    <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/listBidang"
                        android:layout_marginTop="5dp"
                        android:layout_below="@+id/textBidang"
                        android:scrollbars="vertical"
                        >

                    </android.support.v7.widget.RecyclerView>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/bidangDetail"
                    android:layout_marginTop="0.3dp"
                    android:paddingBottom="10dp"
                    android:paddingRight="15dp"
                    android:paddingLeft="15dp"
                    android:id="@+id/lokasiDetail"
                    android:background="@color/putih"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lokasi Pekerjaan"
                        android:textColor="@color/hitam"
                        android:textSize="@dimen/text_font"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins_regular"
                        android:id="@+id/textLokasi"
                        android:layout_marginTop="10dp"
                        />
                    <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/listLokasi"
                        android:layout_marginTop="5dp"
                        android:layout_below="@+id/textLokasi"
                        android:scrollbars="vertical"
                        >

                    </android.support.v7.widget.RecyclerView>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lokasiDetail"
                    android:layout_marginTop="0.3dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:id="@+id/descriptionDetail"
                    android:background="@color/putih"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Description"
                        android:textColor="@color/hitam"
                        android:textSize="@dimen/text_font"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/poppins_regular"
                        android:id="@+id/textDescription"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textDescription"
                        android:textColor="@color/grayGelap"
                        android:textSize="@dimen/text_font"
                        android:fontFamily="@font/poppins_regular"
                        android:id="@+id/dataDescription"
                        android:layout_marginTop="5dp"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/descriptionDetail"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    >

                    <android.support.design.widget.TabLayout
                        android:id="@+id/tabLayout_Person"
                        style="@style/MyCustomTabLayout2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:background="#000"
                        android:backgroundTint="#fff"
                        app:tabGravity="fill"
                        app:tabMode="fixed"></android.support.design.widget.TabLayout>

                    <android.support.v4.view.ViewPager
                        android:id="@+id/viewpager_Person"
                        android:layout_width="match_parent"
                        android:layout_height="500dp"
                        android:layout_below="@id/tabLayout_Person"
                        android:layout_marginTop="3dp"
                        android:padding="7dp"
                        android:scrollbars="none"
                        >
                    </android.support.v4.view.ViewPager>
                </RelativeLayout>
            </RelativeLayout>
            <ProgressBar
                android:id="@+id/progressDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_margin="16dp" />
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>