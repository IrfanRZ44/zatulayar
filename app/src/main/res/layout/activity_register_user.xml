<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/putih"
    android:padding="5dp"
    tools:context="com.zlayar.zlayar.AuthenticationUser.register.registerUser">
    <RelativeLayout
        android:id="@+id/customToolbar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#FFFFFF">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_back"
            android:id="@+id/registerBack"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Register"
            android:textColor="#000000"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/registerBack"
            android:gravity="center_vertical"
            android:layout_marginLeft="25dp"
            android:fontFamily="@font/poppins_regular"
            />
    </RelativeLayout>

    <ImageView
        android:id="@+id/logoRegister"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/customToolbar"
        android:background="@drawable/logo_atas" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logoRegister"
        android:layout_marginTop="10dp"
        android:paddingBottom="25dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp">

        <EditText
            android:id="@+id/registerEmail"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:background="@drawable/border_edit_text"
            android:fontFamily="@font/poppins_regular"
            android:hint="Email"
            android:paddingLeft="10dp"
            android:textColor="@color/hitam"
            android:textColorHint="@color/grayMain"
            android:singleLine="true"
            />

        <RelativeLayout
            android:id="@+id/pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/registerEmail">

            <EditText
                android:id="@+id/registerPass"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:background="@drawable/border_edit_text"
                android:fontFamily="@font/poppins_regular"
                android:hint="Pass"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:paddingRight="50dp"
                android:textColor="@color/hitam"
                android:textColorHint="@color/grayMain"
                android:singleLine="true"
                />

            <Button
                android:id="@+id/show_password"
                android:layout_width="27dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_dont_show"
                        android:theme="@style/MyCheckbox"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                />
        </RelativeLayout>

        <Button
            android:id="@+id/registerUser"
            android:layout_width="310dp"
            android:layout_height="45dp"
            android:layout_below="@+id/pass"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:background="@color/blue2"
            android:text="SIGN UP !"
            android:textColor="@color/putih" />
    </RelativeLayout>

</RelativeLayout>