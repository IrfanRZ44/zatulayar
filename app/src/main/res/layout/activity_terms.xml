<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zlayar.zlayar.FragmentMain.terms">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/customToolbar"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/blue2">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_backward_white"
                android:id="@+id/backTerms"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Terms"
                android:textColor="@color/putih"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/backTerms"
                android:gravity="center_vertical"
                android:layout_marginLeft="25dp"
                android:fontFamily="@font/poppins_regular"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_below="@+id/customToolbar"
            android:text="Syarat dan Ketentuan"
            android:textSize="@dimen/title_font"
            android:textColor="@color/grayGelap"
            android:fontFamily="@font/poppins_regular"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:id="@+id/textSyarat"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/textSyarat"
            android:textSize="@dimen/text_font"
            android:textColor="@color/grayMain"
            android:fontFamily="@font/poppins_regular"
            android:textStyle="bold"
            android:id="@+id/textTerms"
            />
    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>