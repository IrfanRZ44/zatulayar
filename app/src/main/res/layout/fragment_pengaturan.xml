<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/putihGelap1"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/contentMenu"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:id="@+id/contentAuth"
                    android:visibility="visible"
                    android:background="@drawable/border_detail_setting"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Masuk Sekarang"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/grayGelap"
                        android:textSize="20sp"
                        android:fontFamily="@font/poppins_regular"
                        android:id="@+id/textTitel"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/relativeAuth"
                        android:gravity="center_horizontal"
                        android:layout_below="@+id/textTitel"
                        android:layout_marginTop="20dp"
                        >
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Masuk"
                            android:id="@+id/menuLogin"
                            android:background="@drawable/border_btn_login"
                            android:textColor="@color/putih"
                            />
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Daftar"
                            android:layout_marginLeft="20dp"
                            android:layout_toRightOf="@+id/menuLogin"
                            android:background="@drawable/border_btn_register"
                            android:textColor="@color/grayGelap"
                            android:id="@+id/menuRegister"
                            />
                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:id="@+id/contentLogout"
                    android:visibility="visible"
                    android:background="@drawable/border_detail_setting"
                    >
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/personPic"
                        android:layout_width="120dp"
                        android:layout_height="110dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/logo_baru" />

                    <TextView
                        android:id="@+id/personName"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@+id/personPic"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Irfan"
                        android:textColor="#000"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/emailPerson"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/personName"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@+id/personPic"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Android Developer"
                        android:textColor="@color/grayGelap"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/menuEdit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/personPic"
                        android:layout_margin="7dp"
                        android:background="@drawable/border_btn_search"
                        android:fontFamily="@font/poppins_bold"
                        android:text="EDIT"
                        android:textColor="@color/putih"
                        android:textStyle="bold" />
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:id="@+id/layananPelanggan"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Layanan Pelanggan"
                    android:textSize="18sp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/grayGelap"
                    android:fontFamily="@font/poppins_regular"
                    android:id="@+id/textLayanan"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/textLayanan"
                    android:paddingLeft="5dp"
                    android:id="@+id/via_telp"
                    android:background="@drawable/border_btn_register"
                    android:elevation="2dp"
                    >
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_phone"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_centerVertical="true"
                        android:id="@+id/image_phone"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="082248774026"
                        android:textSize="16sp"
                        android:layout_toRightOf="@+id/image_phone"
                        android:textColor="#000"
                        android:id="@+id/phone"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Via Telepon"
                        android:layout_toRightOf="@+id/image_phone"
                        android:layout_below="@+id/phone"
                        android:textSize="12sp"
                        android:textColor="@color/grayGelap"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/via_telp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/border_btn_register"
                    android:id="@+id/via_email"
                    android:elevation="2dp"
                    >
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_mail"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="4dp"
                        android:layout_centerVertical="true"
                        android:id="@+id/image_email"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="irfan.rozal44@gmail.com"
                        android:textSize="16sp"
                        android:layout_toRightOf="@+id/image_email"
                        android:textColor="#000"
                        android:id="@+id/email"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Via Email"
                        android:layout_toRightOf="@+id/image_email"
                        android:layout_below="@+id/email"
                        android:textSize="12sp"
                        android:textColor="@color/grayGelap"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/via_email"
                    android:id="@+id/via_wa"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/border_btn_register"
                    android:elevation="2dp"
                    >
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:src="@drawable/wa"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="4dp"
                        android:layout_centerVertical="true"
                        android:id="@+id/image_wa"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="082248774026"
                        android:textSize="16sp"
                        android:layout_toRightOf="@+id/image_wa"
                        android:textColor="#000"
                        android:id="@+id/wa"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Via WhatsApp"
                        android:layout_toRightOf="@+id/image_wa"
                        android:layout_below="@+id/wa"
                        android:textSize="12sp"
                        android:textColor="@color/grayGelap"
                        />
                </RelativeLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tentang Kami"
                    android:textSize="18sp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/grayGelap"
                    android:fontFamily="@font/poppins_regular"
                    android:id="@+id/textAboutUs"
                    android:layout_below="@+id/via_wa"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/textAboutUs"
                    android:id="@+id/about_terms"
                    android:background="@drawable/border_btn_register"
                    android:elevation="2dp"
                    >
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/terms"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_centerVertical="true"
                        android:id="@+id/image_terms"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/terms_of_service"
                        android:textSize="16sp"
                        android:layout_toRightOf="@+id/image_terms"
                        android:textColor="#000"
                        android:id="@+id/terms"

                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Terms of Service"
                        android:layout_toRightOf="@+id/image_terms"
                        android:layout_below="@+id/terms"
                        android:textSize="12sp"
                        android:textColor="@color/grayGelap"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_forward"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:id="@+id/fw_terms"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/about_terms"
                    android:id="@+id/about_versi"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/border_btn_register"
                    android:elevation="2dp"
                    >
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_information"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_centerVertical="true"
                        android:id="@+id/image_versi"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Versi Aplikasi"
                        android:textSize="16sp"
                        android:layout_toRightOf="@+id/image_versi"
                        android:textColor="#000"
                        android:id="@+id/versi"

                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="V 1.0.0"
                        android:layout_toRightOf="@+id/image_versi"
                        android:layout_below="@+id/versi"
                        android:textSize="12sp"
                        android:textColor="@color/grayGelap"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/about_versi"
                    android:id="@+id/about_language"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/border_btn_register"
                    android:elevation="2dp"
                    >
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_language"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_centerVertical="true"
                        android:id="@+id/image_language"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bahasa"
                        android:textSize="16sp"
                        android:layout_toRightOf="@+id/image_language"
                        android:textColor="#000"
                        android:id="@+id/language"

                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bahasa Indonesia"
                        android:layout_toRightOf="@+id/image_language"
                        android:layout_below="@+id/language"
                        android:textSize="12sp"
                        android:textColor="@color/grayGelap"
                        />
                </RelativeLayout>

            </RelativeLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:text="Logout"
                android:id="@+id/menuLogout"
                android:background="@drawable/border_cari_jasa"
                android:textColor="@color/blue2"
                android:layout_below="@+id/layananPelanggan"
                />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>