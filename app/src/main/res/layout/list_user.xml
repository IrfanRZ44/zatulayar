<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/putihGelap1"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/putih"
        android:backgroundTint="@color/putih"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@drawable/border_pekerjaan"
            android:elevation="16dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/kt_foto"
                android:layout_width="170dp"
                android:layout_height="130dp"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="13dp">

                <TextView
                    android:id="@+id/list_name"
                    android:layout_width="match_parent"
                    android:layout_height="26dp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/hitam"
                    android:textStyle="bold"
                    android:textSize="@dimen/title_font" />
                <TextView
                    android:id="@+id/list_skill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/list_name"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/grayMain"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/list_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/list_skill"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/hitam"
                    android:textSize="11sp"
                    />
                <TextView
                    android:id="@+id/list_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/list_description"
                    android:layout_marginTop="@dimen/margin_standard_big"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/margin_standard"
                    android:textColor="@color/blue2"
                    android:textSize="@dimen/text_font" />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>